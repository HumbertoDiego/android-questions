<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    app:cardElevation="4dp"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/person_photo"
        android:layout_toEndOf="@+id/person_photo">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/db_title"
            android:textSize="14sp"
            android:text="person name"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/person_photo"
            android:layout_toEndOf="@+id/person_photo"
            android:layout_margin="4dp" />

        <ImageView
            android:id="@+id/db_photo"
            app:srcCompat="@drawable/abstracttexture"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ord"
            android:layout_toRightOf="@+id/ord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="NÃ­vel  / Exp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/db_descriptor"
            android:layout_toRightOf="@+id/person_photo"
            android:layout_toEndOf="@+id/person_photo"
            android:layout_alignBottom="@+id/person_photo"
            android:textSize="13sp"
            android:layout_margin="4dp" />

        <TextView
            android:text="Ord."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ord"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="4dp" />
    </LinearLayout>

</android.support.v7.widget.CardView>



