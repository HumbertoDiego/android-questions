<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:paddingRight="16dp"
    android:id="@+id/cv_coment_user"
    app:cardBackgroundColor="@android:color/holo_blue_dark"
    android:layout_margin="0.2dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/person_photo"
                app:srcCompat="@drawable/student"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:paddingTop="8dp" />;

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="152dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/person_name"
                        android:textSize="14sp"
                        android:text="person name"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/person_photo"
                        android:layout_toEndOf="@+id/person_photo"
                        android:textStyle="normal|bold"
                        android:layout_weight="0.16"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/coment_date"
                        android:layout_weight="0.14"
                        android:textColor="?android:attr/colorButtonNormal" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@color/grey"
                    android:id="@+id/coment_photo"
                    android:layout_weight="1"
                    android:layout_gravity="left" />

                <TextView
                    android:text="xwfeghtujmkil,o.l.ikjhgfrdxdferghjukmjnhbvfcx vvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvfffffffffffffffffffffffffffffffffffvvvv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/person_coment"
                    android:textSize="13sp"
                    android:padding="8dp"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ToggleButton
                        android:layout_width="62dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/curtir_toggle_button"
                        android:background="@drawable/toggle_curtir"
                        android:textOff='""'
                        android:textOn='""' />

                    <TextView
                        android:text="4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/curtir"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
